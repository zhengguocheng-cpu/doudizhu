{
  "name": "cocos-doudizhu",
  "version": "1.0.0",
  "description": "Cocos Creator 3.x 斗地主游戏",
  "author": "Doudizhu Team",
  "main": "db://assets/scripts/GameManager.ts",
  "scene": "db://assets/scenes/Login.scene",
  "start-scene": "db://assets/scenes/Login.scene",
  "settings": {
    "physics": {
      "enabled": false,
      "gravity": {
        "x": 0,
        "y": -320,
        "z": 0
      }
    },
    "rendering": {
      "renderPipeline": "forward",
      "useHDR": false,
      "useFloatOutput": false,
      "useBloom": false,
      "useToneMapping": false
    },
    "group-list": [
      {
        "name": "default",
        "id": "default"
      },
      {
        "name": "UI",
        "id": "UI"
      },
      {
        "name": "Game",
        "id": "Game"
      },
      {
        "name": "Cards",
        "id": "Cards"
      }
    ],
    "collision-matrix": [
      [true],
      [true, true],
      [true, true, true],
      [true, true, true, true]
    ],
    "design-resolution": {
      "width": 1920,
      "height": 1080,
      "fitWidth": true,
      "fitHeight": true
    }
  },
  "platforms": {
    "web": {
      "orientation": {
        "landscapeLeft": true,
        "landscapeRight": true,
        "portrait": false,
        "upsideDown": false
      },
      "resolution": {
        "width": 1920,
        "height": 1080
      },
      "web": {
        "orientation": "landscape",
        "fullscreen": false,
        "resolution": {
          "width": 1920,
          "height": 1080
        }
      }
    },
    "android": {
      "orientation": {
        "landscapeLeft": true,
        "landscapeRight": true,
        "portrait": false,
        "upsideDown": false
      },
      "resolution": {
        "width": 1920,
        "height": 1080
      },
      "android": {
        "packageName": "com.doudizhu.game",
        "versionName": "1.0.0",
        "versionCode": 1,
        "minSdkVersion": 21,
        "targetSdkVersion": 33
      }
    },
    "ios": {
      "orientation": {
        "landscapeLeft": true,
        "landscapeRight": true,
        "portrait": false,
        "upsideDown": false
      },
      "resolution": {
        "width": 1920,
        "height": 1080
      },
      "ios": {
        "bundleId": "com.doudizhu.game",
        "version": "1.0.0",
        "build": "1"
      }
    },
    "wechatgame": {
      "orientation": {
        "landscapeLeft": true,
        "landscapeRight": true,
        "portrait": false,
        "upsideDown": false
      },
      "resolution": {
        "width": 1920,
        "height": 1080
      },
      "wechatgame": {
        "appid": "your-wechat-appid",
        "orientation": "landscape",
        "separateEngine": false,
        "subContext": false
      }
    }
  }
}
